{
  "name": "mason",
  "version": "1.0.0",
  "private": true,
  "description": "Marble Mason Billing Application - Monorepo",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "dev:app": "pnpm --filter @mason/app dev",
    "dev:api": "pnpm --filter @mason/api start:dev",
    "build": "pnpm -r run build",
    "build:app": "pnpm --filter @mason/app build",
    "build:api": "pnpm --filter @mason/api build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "prisma:generate": "pnpm --filter @mason/api exec prisma generate",
    "prisma:migrate": "pnpm --filter @mason/api exec prisma migrate dev",
    "prisma:studio": "pnpm --filter @mason/api exec prisma studio"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260217.1"
  },
  "keywords": [
    "marble",
    "mason",
    "billing",
    "monorepo"
  ],
  "author": "",
  "license": "UNLICENSED"
}
